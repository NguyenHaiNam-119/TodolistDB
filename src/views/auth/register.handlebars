<div class="form">
    <h2>Register</h2>
    <form action="/auth/register" method="POST" class="auth-form">
        <div class="form-group">
            <input type="text" 
                   name="username" 
                   placeholder="Username" 
                   class="form__input" 
                   required>
        </div>
        <div class="form-group">
            <input type="password" 
                   name="password" 
                   placeholder="Password" 
                   class="form__input" 
                   required>
        </div>
        <button type="submit" class="form__button">Register</button>
    </form>
    <p class="auth-links">
        Already have an account? <a href="/auth/login">Login</a>
    </p>
</div> 